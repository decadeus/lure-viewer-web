{
  "name": "lure-viewer-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "node node_modules/vite/bin/vite.js",
    "web": "node node_modules/vite/bin/vite.js",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "wait-on http://localhost:5173 && electron ./electron/main.cjs",
    "dev:electron": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "build:desktop": "vite build && electron-builder"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.0",
    "@supabase/supabase-js": "^2.86.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "three": "^0.181.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.1.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.0.5",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "wait-on": "^8.0.1",
    "vite": "^7.2.4"
  },
  "build": {
    "appId": "com.lure.viewer",
    "productName": "LureViewer",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
